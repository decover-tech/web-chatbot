{
  "name": "embed-chatbot",
  "version": "1.0.0",
  "description": "Component library for DecoverAI's chatbot",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decover-tech/embed-chatbot.git"
  },
  "author": "Ravi Tandon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/decover-tech/embed-chatbot/issues"
  },
  "homepage": "https://github.com/decover-tech/embed-chatbot#readme",
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11"
  },
  "peerDependencies": {
    "react": "^18.0.28",
    "react-dom": "^18.0.11"
  }
}
